.field {
  display block
  position relative

  &__error,
  &__title {
    box-sizing border-box
    transition $transition-main
    overflow hidden
    display block
    max-height 100px
    padding-right 15px
    padding-left 15px
    color $color-7-800
    font-size 14px
  }

  &__error {
    color $color-error
  }

  &__error {
    padding-top 5px
    transform none
  }

  &__main {
    display block
    position relative
  }

  /$input,
  &__input {
    transition $transition-main
    appearance none
    box-sizing border-box
    display block
    width 100%
    padding 4px 19px 4px
    border-radius 3px
    border 1px solid $color-7-600
    outline 0
    color $color-2
    min-height 41px
    font-family $font-main
    font-size 14px
    +placeholder() {
      color $color-main
    }

    &:hover {
      border-color $color-primary
    }

    &:focus {
      border-color $color-primary
    }

    &:disabled {
      border-color $color-7
      color $color-7
      +placeholder() {
        color $color-7
      }
    }

    select
    & {
      user-select none
      padding-right (19px + 25px)

      &::-ms-expand {
        display none
      }
    }

    textarea
    & {
      //min-height unquote('calc(' + ($line-main* 2em) + ' + ' + (6 + 8 + 2) + 'px)')
    }

    div
    & {
      overflow auto
      //height unquote('calc(' + ($line-main* 3em) + ' + ' + (6 + 8 + 2) + 'px)')
    }
  }

  &.is-error {
    .field__input {
    }

    .field__main {
    }

    .field__error {
      display block
    }
  }

  ul {
    padding-top 5px

    li {
      padding 0

      &:before {
        content ''
        display none
      }
      color red
      font-size 14px
    }
  }
}

.field_no-error-push {
  .field__error {
    position absolute
    margin-top 6px
    margin-bottom 12px
  }
}

.field_select {
  .field__main {
    &::after {
      content ''
      position absolute
      //svg('arrow-down', 16px, $color-main, none center)
      right 18px
    }
  }

  &.is-error {
    .field__main {
      &::after {
        opacity 0
      }
    }
  }
}

.field.is-filled,
.field.is-focus:not(.field_title) {
  .field {
    &__title {
      top -25px
      transform none
      color white
      font-size 12px
    }
  }
}

.field.is-disabled {
  pointer-events none

  .field {
    &__input {
      background $color-1
      color $color-7
    }
  }
}

.field.password {
  .field {
    &__input {
      font-family $font-password
      -webkit-text-security: disc;
      +placeholder() {
        font-family $font-main
      }
    }
  }
}

.field.file {
  display flex
  position relative
  align-items center
  cursor pointer
  flex-wrap wrap
  .field {
    &__file {
      size 50px
      border 1px dashed $color-7-700
      flex 0 0 auto
      margin-right 10px
      border-radius 50%
      position relative
      background-position center
      background-repeat no-repeat
      background-size cover
      z-index 15
      cursor pointer
      &:before {
        content ''
        position absolute
        left 50%
        top 50%
        display block
        transform translate(-50%, -50%)
        svg('image-mask', 24px, $color-7-800)
        cursor pointer
      }
    }

    &__title {
      flex 1
      color $color-7-800
      padding 0
      position relative
      z-index 15
      cursor pointer
    }
    &__error {
      flex 1 1 100%
    }
    &__input {
      opacity 0
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      cursor pointer
      z-index 99
      padding 0
      display block
    }
  }

  &:hover {
    .field {
      &__file {
        border 1px dashed $color-primary

        &:before {
          svg-color('image-mask', $color-primary)
        }
      }

      &__title {
        color $color-primary
      }
    }
  }
}

.field.file.is-upload {
  .field {
    &__file {
      border 1px dashed $color-primary

      &:before {
        display none
      }
    }

    &__title {
      color $color-primary
    }

    &__input {

    }
  }

}
